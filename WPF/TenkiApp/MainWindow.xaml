<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="710" Width="840"
        ResizeMode="CanMinimize">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="AliceBlue" Offset="0"/>
            <GradientStop Color="SkyBlue" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 一行目：アプリ名 + ダークモード切替ボタン + 最終更新時刻 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：アプリ名 -->
            <TextBlock x:Name="FormName" Text="お天気アプリ" FontSize="28" FontWeight="Bold"
                    HorizontalAlignment="Left" Margin="20,0,0,0"/>

            <!-- ダークモード切替ボタン -->
            <Button x:Name="ThemeToggleButton" Grid.Column="1" Width="40" Height="40" Margin="10,0,20,0"
                    Click="ThemeToggleButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="20" Background="White" BorderBrush="Gray" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- マウスオーバー時：少し明るく -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Silver"/>
                            </Trigger>
                            <!-- クリック時：縮んで押した感を出す -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Image x:Name="ThemeIcon" Source="https://img.icons8.com/ios-filled/50/crescent-moon.png" Stretch="Uniform"/>
            </Button>

            <!-- 右側：最終更新時刻 -->
            <TextBlock x:Name="LastUpdatedText" Grid.Column="2" FontSize="14" 
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="最終更新: --/-- --:--"/>
        </Grid>

        <!-- 二行目：都市選択 -->
        <GroupBox Grid.Row="1" Margin="0,0,0,20" Padding="10" Background="White">
            <GroupBox.Header>
                <Border Background="White" Padding="2">
                    <TextBlock Text="都市を選択"/>
                </Border>
            </GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="CityComboBox" Width="200" Margin="0,0,10,0" VerticalAlignment="Center"/>

                <!-- 検索ボタン -->
                <Button Content="検索" Width="80" Height="40" Click="SearchButton_Click" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="20" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="Silver"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="DarkGray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- 現在地取得ボタン -->
                <Button Content="現在地取得" Width="100" Height="40" Click="CurrentLocationButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="20" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="Silver"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="DarkGray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </GroupBox>

        <!-- 三行目：天気情報 -->
        <GroupBox Grid.Row="2" Padding="10" Margin="0,0,0,20" Background="White">
            <GroupBox.Header>
                <Border Background="White" Padding="2">
                    <TextBlock Text="天気情報"/>
                </Border>
            </GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="CityNameText" FontSize="16" Margin="0,0,10,0"/>
                <Image x:Name="WeatherIcon" Width="32" Height="32" Margin="0,0,20,0"/>
                <TextBlock x:Name="CurrentWeatherText" FontSize="16" Margin="0,0,20,0"/>
                <TextBlock x:Name="CurrentTempText" FontSize="16" Margin="0,0,20,0"/>
                <TextBlock x:Name="CurrentHumidityText" FontSize="16" Margin="0,0,20,0"/>
                <TextBlock x:Name="CurrentWindText" FontSize="16" Margin="0,0,20,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 四行目：1時間ごとの予報 -->
        <GroupBox Grid.Row="3" Padding="10" Background="White">
            <GroupBox.Header>
                <Border Background="White" Padding="2">
                    <TextBlock Text="1時間ごとの予報"/>
                </Border>
            </GroupBox.Header>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="HourlyForecastPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="5" Width="100">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Time}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="{Binding Icon}" Width="32" Height="32" Margin="0,5"/>
                                    <TextBlock Text="{Binding Temperature}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- 五行目：1週間の予報 -->
        <GroupBox Grid.Row="4" Padding="10" Background="White">
            <GroupBox.Header>
                <Border Background="White" Padding="2">
                    <TextBlock Text="1週間の予報"/>
                </Border>
            </GroupBox.Header>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="WeeklyForecastPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="5" Width="120">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Date}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="{Binding Icon}" Width="32" Height="32" Margin="0,5"/>
                                    <TextBlock Text="{Binding TempMax}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TempMin}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- 下部ステータスバー -->
        <StatusBar Grid.Row="5" Background="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusMessage" Foreground="Black" Text=""/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
